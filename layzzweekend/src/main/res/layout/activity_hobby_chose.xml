<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.layzzweekend.ui.HobbyChoseActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/hobbychose_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff">
        <RelativeLayout
        android:id="@+id/hobbychose_relate_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
        android:id="@+id/hobbychose_back_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:onClick="click"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_nav_left"/>
        <TextView
        android:id="@+id/hobbychose_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择你的兴趣标签"
        android:layout_centerInParent="true"/>
        <ImageView
        android:id="@+id/hobbychose_next_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:onClick="click"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_nav_right"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <GridView
        android:id="@+id/hobbychose_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:layout_below="@id/hobbychose_toolbar"></GridView>
</RelativeLayout>
