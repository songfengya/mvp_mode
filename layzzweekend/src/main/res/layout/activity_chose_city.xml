<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ChooseCityActivity">
   <android.support.v7.widget.Toolbar
       android:id="@+id/choosecity_toolbar"
       android:layout_width="match_parent"
       android:layout_height="40dp">
           <ImageView
               android:id="@+id/choosecity_close_img"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:scaleType="centerCrop"
               android:src="@drawable/ic_me_back"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:text="切换城市"
               android:textSize="18sp"
               android:gravity="center_horizontal"/>
   </android.support.v7.widget.Toolbar>

  <ScrollView
      android:id="@+id/choosecity_scrollview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/choosecity_toolbar">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:layout_marginTop="10dp">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="当前所在的城市"/>
              <TextView
                  android:id="@+id/choosecity_currentcityname_txt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="武汉"
                  android:textColor="#ffffff"
                  android:background="#000000"
                  android:layout_marginLeft="100dp"/>
          </LinearLayout>
          <TextView
              android:id="@+id/choosecity_scroll_txt"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="最经浏览"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:layout_marginTop="10dp">
              <TextView
                  android:id="@+id/choosecity_lastcity_one_txt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="未知1"
                  android:background="@drawable/textview_back_shape"/>
              <TextView
                  android:id="@+id/choosecity_lastcity_two_txt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="未知2"
                  android:layout_marginLeft="40dp"
                  android:background="@drawable/textview_back_shape"/>
              <TextView
                  android:id="@+id/choosecity_lastcity_three_txt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="未知3"
                  android:layout_marginLeft="40dp"
                  android:background="@drawable/textview_back_shape"/>
          </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="热门城市"
              android:layout_marginTop="10dp"/>
         <com.example.layzzweekend.view.CustomGridView
             android:id="@+id/choosecity_gridview"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginTop="10dp"
             android:numColumns="3"></com.example.layzzweekend.view.CustomGridView>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="全部城市"
              android:layout_marginTop="10dp"/>
          <com.example.layzzweekend.view.CustomListView
              android:id="@+id/choosecity_listview"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="10dp">
          </com.example.layzzweekend.view.CustomListView>
      </LinearLayout>
  </ScrollView>
</RelativeLayout>
