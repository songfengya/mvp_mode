<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.layzzweekend.ui.SecondFragment">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
               <TextView
                   android:id="@+id/secondfragment_toolbar_address_txt"
                   android:layout_width="wrap_content"
                   android:layout_height="40dp"
                   android:drawableRight="@drawable/ic_down"
                   android:text="hello"
                   android:textSize="20sp"
                   android:layout_alignBottom="@+id/secondfragment_toolbar_surch_edt"/>
               <EditText
                   android:id="@id/secondfragment_toolbar_surch_edt"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="搜索活动或地点"
                   android:drawableLeft="@drawable/ic_nav_search"
                   android:layout_toRightOf="@id/secondfragment_toolbar_address_txt"
                   android:layout_marginLeft="20dp"
                   android:paddingTop="10dp" />
     <GridLayout
         android:id="@+id/seconfragment_gridlayout"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal"
         android:rowCount="5"
         android:columnCount="2"
         android:layout_below="@id/secondfragment_toolbar_surch_edt">
         <TextView
             android:id="@+id/seconfragment_gridlayout_txt_one"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/ic_c_persons"
             android:text="全部类目"
             android:textSize="20sp"
             android:layout_margin="15dp" />
         <TextView
             android:id="@+id/seconfragment_gridlayout_txt_two"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/ic_c_persons"
             android:text="沙龙学堂"
             android:textSize="20sp"
             android:layout_margin="15dp" />
         <TextView
             android:id="@+id/seconfragment_gridlayout_txt_three"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/ic_c_persons"
             android:text="DIY手作"
             android:textSize="20sp"
             android:layout_margin="15dp" />
         <TextView
             android:id="@+id/seconfragment_gridlayout_txt_four"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/ic_c_persons"
             android:text="派对聚会"
             android:textSize="20sp"
             android:layout_margin="15dp"  />
         <TextView
             android:id="@+id/seconfragment_gridlayout_txt_five"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/ic_c_music"
             android:text="暂不开放"
             android:textSize="20sp"
             android:layout_margin="15dp" />
         <TextView
             android:id="@+id/seconfragment_gridlayout_txt_six"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/ic_c_backetball"
             android:text="运动健身"
             android:textSize="20sp"
             android:layout_margin="15dp" />
         <TextView
             android:id="@+id/seconfragment_gridlayout_txt_seven"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/ic_c_montain"
             android:text="户外活动"
             android:textSize="20sp"
             android:layout_margin="15dp" />
         <TextView
             android:id="@+id/seconfragment_gridlayout_txt_eight"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/ic_c_leaf"
             android:text="茶会雅集"
             android:textSize="20sp"
             android:layout_margin="15dp" />
         <TextView
             android:id="@+id/seconfragment_gridlayout_txt_nine"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/ic_c_leaf"
             android:text="文艺生活"
             android:textSize="20sp"
             android:layout_margin="15dp" />
     </GridLayout>
   </RelativeLayout>
</FrameLayout>
