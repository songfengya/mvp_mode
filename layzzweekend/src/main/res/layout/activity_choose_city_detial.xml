<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.layzzweekend.ui.ChooseCityDetialActivity">
       <RelativeLayout
           android:id="@+id/choosecity_detial_toolbar"
           android:layout_width="match_parent"
           android:layout_height="40dp">
           <ImageView
               android:id="@+id/choosecity_detial_back_img"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_nav_left"/>
           <TextView
               android:id="@+id/choosecity_detial_cityname_txt"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:text="武汉"
               android:layout_toRightOf="@id/choosecity_detial_back_img"
               android:gravity="center_horizontal"
               android:textSize="20dp" />
       </RelativeLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/choosecity_detial_pull_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/choosecity_detial_toolbar">
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</RelativeLayout>
